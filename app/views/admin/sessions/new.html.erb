<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">

      <div class="row">
        <div class="col-3">
          <h3>管理者ログイン</h3>
        </div>
      </div>
      <br>
      <br>

      <%= form_with(model: resource, local: true, url: session_path(resource_name)) do |f| %>

      <div class="row">
        <div class="col-md-3">
          <div class="field">
            <%= f.label :email, "メールアドレス" %>
          </div>
        </div>
        <div class="col-md-5 mb-4">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3">
          <div class="field">
            <%= f.label :password, "パスワード" %>
          </div>
        </div>
        <div class="col-md-5 mb-4">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-5 mb-4">
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      </div>

        <% end %>

      <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-7 mb-4">
          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>


