<div class="container">
  <h3>レビュー一覧</h3>

  <div class="row">
    <% @reviews.each do |review| %>
      <div class="col-md-3">
        <div class="card">
          <% if review.image.attached? %>
            <%= image_tag review.image, class: "img-fluid", style: "width: 100%; height: 150px; object-fit: cover;" %>
          <% else %>
            <%= image_tag 'no_image.jpg', class: "img-fluid", style: "width: 100%; height: 150px; object-fit: cover;" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to review.facility_name, review_path(review) %>
            </h5>
            <div class="card-text">
              <%= simple_format(review.text) %>
            </div>
          </div>
          <div class="card-footer text-right">
            <div>
              <% if review.favorited_by?(current_user) %>
                <%= link_to review_review_favorites_path(review), method: :delete do %>
                  ♥<%= review.review_favorites.count %>
                <% end %>
              <% else %>
                <%= link_to review_review_favorites_path(review), method: :post do %>
                  ♡<%= review.review_favorites.count %>
                <% end %>
              <% end %>
            </div>
            <small class="text-black-50">
              コメント数:<%= review.review_comments.count %>
            </small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>