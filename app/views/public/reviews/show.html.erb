<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>投稿者</h3>
      <%= render 'public/users/info', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h3>詳細情報</h3>

      <table class="table">
        <tr>
          <td style="width: 30%">施設名</td>
          <td style="width: 70%"><%= @review.facility_name %></td>
        </tr>
        <tr>
          <td style="width: 30%">レビュー</td>
          <td style="width: 70%"><%= @review.text %></td>
        </tr>
        <tr>
          <td style="width: 30%">郵便番号</td>
          <td style="width: 70%"><%= @review.post_code %></td>
        </tr>
        <tr>
          <td style="width: 30%">住所</td>
          <td style="width: 70%"><%= @review.address %></td>
        </tr>
        <tr>
          <td style="width: 30%">写真</td>
          <td style="width: 70%"><%= image_tag @review.image.variant(resize: '100x100') if @review.image.attached? %></td>
        </tr>
      </table>

      <div id="comments-area">
        <h6>コメント</h6>
        <% @review.review_comments.each do |review_comment| %>
          <p><%= image_tag review_comment.user.profile_image.variant(resize: '100x100') %></p>
          <%= link_to review_comment.user.name, users_my_page_path(review_comment.user) %>
          <%= review_comment.comment %>
          <% if review_comment.user == current_user %>
            <%= link_to "編集", edit_review_review_comment_path(review, review_comment), method: :get, class: "btn btn-sm btn-info" %>
            <%= link_to "削除", review_review_comment_path(review, review_comment), method: :delete, class: "btn btn-sm btn-danger" %>
          <% end %>
        <% end %>

        <%= form_with model: [@review, @review_comment], url: review_comments_path(@review.id), method: :post do |f| %>
          <%= f.text_area :text, rows: '5', cols: 60 %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
