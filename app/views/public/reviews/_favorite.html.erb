<% if review.favorited_by?(current_user) %>
  <%= link_to review_review_favorites_path(review), method: :delete, remote: true, class: "link" do %>
    <i class="fas fa-thumbs-up"></i>:<%= review.review_favorites.count %>
  <% end %>
<% else %>
  <%= link_to review_review_favorites_path(review), method: :post, remote: true, class: "link" do %>
    <i class="far fa-thumbs-up"></i>:<%= review.review_favorites.count %>
  <% end %>
<% end %>