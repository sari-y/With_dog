 <% unless @user == current_user %>
  <% if current_user.following?(@user) %>
    <%= link_to "フォロー外す", user_relationships_path(@user.id), remote: true, method: :delete, class: 'btn user-btn btn-outline-2 text-center' %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(@user.id), remote: true, method: :post, class: 'btn user-btn text-center', style: "background-color: #ff7f50; color: #FFF;" %>
  <% end %>
<% end %>

