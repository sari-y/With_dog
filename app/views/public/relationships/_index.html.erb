<table class='table', style="color: #6f4d3e;">
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td style="vertical-align: middle;">
          <%= link_to user_path(user.id), class: "w-100" do %>
          <%= image_tag user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td style="vertical-align: middle;", class="name"><%= link_to user.name, user_path(user.id) %></td>
        <td style="vertical-align: middle;">フォロー数:<%= user.followings.count %></td>
        <td style="vertical-align: middle;">フォロワー数:<%= user.followers.count %></td>
        <td style="vertical-align: middle;">
          <% unless user == current_user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn-sm edit-btn btn-outline-2" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn-sm edit-btn", style: "background-color: #ff7f50; color: #FFF;" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>