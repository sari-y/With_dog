<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_destroy_mini_path(user.id), method: :delete, remote: true, class: "btn-sm edit-btn btn-outline-2" %>
  <% else %>
    <%= link_to "フォローする", user_create_mini_path(user.id), method: :post, remote: true, class: "btn-sm edit-btn", style: "background-color: #ff7f50; color: #FFF;" %>
  <% end %>
<% end %>