<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= link_to user_destroy_mini_path(user.id), method: :delete, remote: true, class: "btn-sm edit-btn btn-outline-2" do %>
      <i class="fas fa-user-minus"></i>
    <% end %>
  <% else %>
    <%= link_to user_create_mini_path(user.id), method: :post, remote: true, class: "btn-sm edit-btn", style: "background-color: #ff7f50; color: #FFF;" do %>
      <i class="fas fa-user-plus"></i>
    <% end %>
  <% end %>
<% end %>