<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>会員情報</h2>

      <%= render 'info', user: current_user %>

      <div class='col-md-8 offset-md-1'>
        <h2>レビュー</h2>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
              <tbody>
                <% @reviews.each do |review| %>
                  <tr>
                    <td><% if review.image.attached? %>
                        <%= image_tag review.image, size: '50x50' %>
                        <% else %>
                        <%= image_tag 'no_image', size: "50x50" %>
                        <% end %></td>
                    <td><%= review.facility_name %></td>
                    <td id="favorite_buttons_<%= review.id %>">
                      <% if review.favorited_by?(current_user) %>
                        <p><%= link_to review_favorite_path(review), method: :delete, remote: true do %>
                        ♥<%= review.review_favorites.count %>
                        <% end %></p>
                      <% else %>
                        <p><%= link_to book_favorites_path(review), method: :post, remote: true do %>
                        ♡<%= review.review_favorites.count %>
                       <% end %></p>
                      <% end %>
                    </td>
                    <td>
                      コメント数:<%= review.review_comments.count %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
          </table>
      </div>

    </div>
  </div>
</div>
