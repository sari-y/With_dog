<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h4 class="underlined-text">会員情報</h4>
      <br>
      <br>

      <%= render 'info', user: @user %>

      </div>

      <div class='col-md-8 offset-md-1'>

        <h3 class="underlined-text">レビュー</h3>
        <br>
        <br>
          <table class='table table-hover table-inverse'>
              <tbody>
                <% @reviews.each do |review| %>
                  <tr>
                    <td style="vertical-align: middle;">
                      <% count=1 %>
                      <% review.image.each do |image| %>
                        <% if count==1 %>
                          <%= image_tag image.variant(resize: '150x150') if review.image.attached? %>
                        <% end %>
                        <% count+=1 %>
                      <% end %>
                    </td>
                    <td style="vertical-align: middle;"><%= review.facility_name %></td>
                    <td style="vertical-align: middle;">
                      <div id="favorite_buttons_<%= review.id %>">
                      <% if review.favorited_by?(current_user) %>
                        いいね<%= link_to review_review_favorites_path(review), method: :delete do %>
                        ♥<%= review.review_favorites.count %>
                        <% end %></p>
                      <% else %>
                        いいね<%= link_to review_review_favorites_path(review), method: :post do %>
                        ♡<%= review.review_favorites.count %>
                       <% end %></p>
                      <% end %>
                      </div>
                    </td>
                    <td style="vertical-align: middle;">
                      コメント数:<%= review.review_comments.count %>
                    </td>
                    <td style="vertical-align: middle;"><%= link_to "詳細", review_path(review), class: "btn", style: "background-color: #ff7f50; color: #FFF;" %></td>
                    <td style="vertical-align: middle;"><% if @user.id == current_user.id %>
                          <%= link_to "編集", edit_review_path(review), class: "btn", style: "background-color: #ff7f50; color: #FFF;" %>
                        <% end %>
                    </td>
                  </tr>

                <% end %>
              </tbody>
          </table>
      </div>
  </div>
</div>
