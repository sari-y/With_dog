<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>会員情報</h2>

      <table class='table'>
        <tr>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image(100,100) %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
        </tr>
        <tr>
	        <th>名前</th>
	        <th><%= @user.name %></th>
        </tr>
        <tr>
	        <th>自己紹介</th>
	        <th><%= @user.introduction %></th>
        </tr>
      </table>

      <div class='row'>
        <%= link_to users_information_edit_path, class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <div class='col-md-8 offset-md-1'>
        <h2>レビュー</h2>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
              <tbody>
                <% @reviews.each do |review| %>
                  <tr>
                    <td><%= image_tag review.image(50,50) %></td>
                    <td><%= review.facility_name %></td>
                    <td id="favorite_buttons_<%= review.id %>">
                      <% if review.favorited_by?(current_user) %>
                        <p><%= link_to review_favorite_path(review), method: :delete, remote: true do %>
                        ♥<%= review.review_favorites.count %>
                        <% end %></p>
                      <% else %>
                        <p><%= link_to book_favorites_path(review), method: :post, remote: true do %>
                        ♡<%= review.review_favorites.count %>
                       <% end %></p>
                      <% end %>
                    </td>
                    <td>
                      コメント数:<%= review.review_comments.count %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
          </table>
      </div>

    </div>
  </div>
</div>
