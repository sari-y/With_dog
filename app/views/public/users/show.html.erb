<br>
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h4 class="underlined-text">
        <% if @user == current_user %>
          マイページ
        <% else %>
          会員情報
        <% end %>
      </h4>
      <br>
      <br>

      <%= render 'info', user: @user %>

    </div>

    <div class='col-md-8 offset-md-1'>
      <div class="row justify-content-center">
        <div class="scroll_area pt-5">
          <div class="pb-4">
            <h3 class="underlined-text">レビュー</h3>
          </div>
          <table class='table'>
            <tbody>
              <% @reviews.each do |review| %>
                <tr>
                  <td style="vertical-align: middle;">
                    <% count=1 %>
                    <% if review.image.attached? %>
                      <% review.image.each do |image| %>
                        <% if count==1 %>
                          <%= link_to review_path(review.id), class: "w-100" do %>
                            <%= image_tag image.variant(resize: '150x150') %>
                          <% end %>
                        <% end %>
                        <% count+=1 %>
                      <% end %>
                    <% end %>
                  </td>
                  <td style="vertical-align: middle; color: #6f4d3e;"><%= link_to review.facility_name, review_path(review), 'data-turbolinks': false, class: "link" %></td>
                  <td style="vertical-align: middle; color: #6f4d3e;">
                    <div id="favorite_buttons_<%= review.id %>">
                      <%= render 'public/reviews/favorite', review: review %>
                    </div>
                  </td>
                  <td style="vertical-align: middle; color: #6f4d3e;"><i class="far fa-comment-alt"></i>:<%= review.review_comments.count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>