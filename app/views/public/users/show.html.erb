<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>会員情報</h2>

      <%= render 'info', user: current_user %>
      </div>

      <div class='col-md-8 offset-md-1'>
        <h2>レビュー</h2>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
              <tbody>
                <% @reviews.each do |review| %>
                  <tr>
                    <td>
                      <% count=1 %>
                      <% review.image.each do |image| %>
                        <% if count==1 %>
                          <%= image_tag image.variant(resize: '100x100') if review.image.attached? %>
                        <% end %>
                        <% count+=1 %>
                      <% end %>
                    </td>
                    <td><%= review.facility_name %></td>
                    <td id="favorite_buttons_<%= review.id %>">
                      <% if review.favorited_by?(current_user) %>
                        <p><%= link_to review_review_favorites_path(review), method: :delete do %>
                        ♥<%= review.review_favorites.count %>
                        <% end %></p>
                      <% else %>
                        <p><%= link_to review_review_favorites_path(review), method: :post do %>
                        ♡<%= review.review_favorites.count %>
                       <% end %></p>
                      <% end %>
                    </td>
                    <td>
                      コメント数:<%= review.review_comments.count %>
                    </td>
                  </tr>
                  <tr>
                    <td><%= link_to "詳細", review_path(review), class: "btn btn-info" %></td>
                    <td><%= link_to "編集", edit_review_path(review), class: "btn btn-info" %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
      </div>
  </div>
</div>
