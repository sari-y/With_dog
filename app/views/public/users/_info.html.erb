<div class="card">
  <div class="card-body">
    <div class=" text-center">
      <% if user.present? %>
        <%= image_tag user.get_profile_image(200,200) %>
      <% end %>
      <br>
      <br>
	    <div>名前&nbsp;&nbsp;&nbsp;<%= user.name %>
	    </div>
	    <br>
      <%= user.introduction %>
      <br>
      <br>
      ＜ フ ォ ロー: <%= link_to user.followings.count, user_followings_path(user.id) %> ＞
      <br>
      ＜ フォロワー: <%= link_to user.followers.count, user_followers_path(user.id) %> ＞
      <br>
      <br>
      <% unless user == current_user %>
        <% if current_user.following?(user) %>
          <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: 'btn btn-info user-btn text-center' %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'btn btn-success user-btn text-center' %>
        <% end %>
      <% end %>

      <% unless user.guest_user? %>
        <% if user.id == current_user.id %>
          <%= link_to users_information_edit_path, class: "btn btn-outline user-btn text-center" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>