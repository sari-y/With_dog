<table class="table table-borderless">
        <tr>
            <%= image_tag user.get_profile_image %>
        </tr>
        <tr>
          <th></th>
          <th></th>
        </tr>
        <tr>
	        <th>名前</th>
	        <th><%= user.name %></th>
        </tr>
        <tr>
	        <th>自己紹介</th>
	        <th><%= user.introduction %></th>
        </tr>
        <tr>
        <td>フォロー:
        </td>
        <td>
        <%= user.followings.count %></td>
        </tr>
        <tr>
          <td>フォロワー:
          </td>
          <td>
          <%= user.followers.count %></td>
          </tr>
                </table>
        <% unless user == current_user %>
        <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: 'btn btn-info btn-w-50' %>
        <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'btn btn-success btn-w50' %>
        <% end %>
        <% end %>

      <% unless user.guest_user? %>
      <div class='row'>
        <%= link_to users_information_edit_path, class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <% end %>