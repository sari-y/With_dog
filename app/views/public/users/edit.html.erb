
<br>
<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">

      <div class="row">
        <div class="col-md-3">
          <h3>登録情報変更</h3>
        </div>
      </div>
      <br>
      <br>

        <%= form_with model: @user, url: users_information_path, method: :patch do |f| %>

          <div class="row">
            <div class="col-md-4">
              <%= f.label :name, "名前" %>
            </div>
            <div class="col-md-8 mb-3">
              <div class="field">
                <%= f.text_field :name %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <%= f.label :introduction, "自己紹介文" %>
            </div>
            <div class="col-md-8 mb-3">
              <div class="field">
                <%= f.text_field :introduction %>
              </div>
            </div>
          </div>

         <div class="row">
            <div class="col-md-4">
              <%= f.label :profile_image, "プロフィール画像" %>
            </div>
            <div class="col-md-8 mb-3">
              <div class="field">
          <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
          </div>
          </div>


          <div class="row">
            <div class="col-md-4"></div>
              <div class="col-md-2">
                <%= f.submit "更新", class: "btn btn-success" %>
              </div>
        <% end %>
              <div class="col-md-4">
                <%= link_to "退会", users_confirm_withdraw_path, class: "btn btn-danger" %>
              </div>
            </div>


    </div>
  </div>
</div>
