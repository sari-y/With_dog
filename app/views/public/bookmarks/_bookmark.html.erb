<% if list.present? %>
  <%= link_to bookmarks_path(review_id: review.id, list: true),
    id: "bookmark_button_#{review.id}",
    class: "link",
    method: :post,
    remote: true do %>
    <i class="far fa-star"></i>
  <% end %>
<% else %>
  <%= link_to bookmarks_path(review_id: review.id, list: nil),
    id: "bookmark_button_#{review.id}",
    class: "bookmark-link",
    method: :post,
    remote: true do %>
      お気に入り<i class="far fa-star"></i>
  <% end %>
<% end %>