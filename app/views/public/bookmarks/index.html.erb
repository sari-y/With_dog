<br>
<br>
<div class="container">
  <div class="row">
    <div class="mb-4">
      <h3 class="underlined-text">お気に入り</h3>
    </div>
  </div>
  <div class="col-md-10 text-right">
      <%= link_to '新しい順', bookmarks_path(latest: "true"), class: "link" %> |
      <%= link_to '古い順', bookmarks_path(old: "true"), class: "link" %> |
      <%= link_to '評価の高い順', bookmarks_path(rating_count: "true"), class: "link" %>
  </div>
  <br>
  <div class="row">
    <div class='col-md-8 offset-md-2'>
      <div class="row">
        <% if @bookmark_reviews.present? %>
          <% @bookmark_reviews.each do |review| %>
            <%= render 'public/reviews/card', review: review %>
          <% end %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>
<br>
<div class="paginate">
  <%= paginate @bookmark_reviews %>
</div>
<br>