<% if list.present? %>
  <%= link_to bookmark_path(current_user.bookmarks.find_by(review_id: review.id), list: true),
  id: "bookmark_button_#{review.id}",
  class: "link",
  method: :delete,
  remote: true do %>
    <i class="fas fa-star"></i>
  <% end %>
<% else %>
  <%= link_to bookmark_path(current_user.bookmarks.find_by(review_id: review.id), list: nil),
  id: "bookmark_button_#{review.id}",
  class: "bookmark-link",
  method: :delete,
  remote: true do %>
    お気に入り<i class="fas fa-star"></i>
  <% end %>
<% end %>