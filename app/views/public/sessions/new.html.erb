<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <div class="row">
        <div class="col-12">
          <h3 class="underlined-text">ログイン</h3>
        </div>
      </div>
      <div class="col-md-10 mb-4 d-flex flex-row-reverse">
        <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-outline btn-sm mb-3 sign_in", method: :post %>
      </div>

      <%= form_with(model: resource, local: true, url: session_path(resource_name)) do |f| %>

        <div class="row">
          <div class="col-md-4">
            <div class="field">
              <i class="fas fa-envelope"></i>
              <%= f.label :email, "メールアドレス" %>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="field">
              <i class="fas fa-key"></i>
              <%= f.label :password, "パスワード" %>
            </div>
          </div>
          <div class="col-md-6 mb-5">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-6 mb-2">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8"></div>
          <div class="col-md-4 mb-5">
            <div class="actions">
              <%= f.submit "ログイン", class: "btn edit-btn", style: "background-color: #ff7f50; color: #FFF;" %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
