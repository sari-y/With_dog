<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">

      <div class="row">
        <div class="col-3">
          <h3 class="underlined-text">新規登録</h3>
        </div>
      </div>

      <%= form_with(model: resource, local: true, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <br>
        <br>

        <div class="row">
          <div class="col-md-4">
            <div class="field">
              <%= f.label :name, "名前" %>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="field">
              <%= f.label :email, "メールアドレス" %>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="field">
              <%= f.label :password, "パスワード" %>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="field">
              <%= f.label :password_confirmation,"(確認用)" %>
            </div>
          </div>
          <div class="col-md-6 mb-5">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-8">
          </div>
          <div class="col-md-4 mb-5">
            <div class="actions">
              <%= f.submit "新規登録", class: "btn edit-btn", style: "background-color: #ff7f50; color: #FFF;" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


